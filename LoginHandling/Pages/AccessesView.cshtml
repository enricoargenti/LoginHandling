@page
@model LoginHandling.Pages.AccessesViewModel
@{
    ViewData["Title"] = "Accesses view";
}

<div class="center-table">
    <table>
        <thead>
            <tr>
                <th>Username</th>
                <th>Door ID</th>
                <th>Device ID</th>
                <th>Building Name</th>
                <th>Building Description</th>
                <th>Access Request Time</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Accesses)
            {
                <tr>
                    <td>@item.Username</td>
                    <td>@item.DoorId</td>
                    <td>@item.DeviceId</td>
                    <td>@item.BuildingName</td>
                    <td>@item.BuildingDescription</td>
                    <td>@item.AccessRequestTime.ToString("yyyy-MM-dd HH:mm:ss.fff")</td>
                </tr>
            }
        </tbody>
    </table>
</div>

